<Window x:Class="SheetCutter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="FontSize" Value="16"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!--<Grid x:Name="RectangleSet"
              Grid.Row="0" Grid.Column="0"
              Grid.RowSpan="2">
            
            --><!--<ListBox>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="25"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" Text="{Binding Name}"/>
                            <TextBlock Grid.Column="1" Text="{Binding Sys.Country}"/>
                            <Button Grid.Column="3" Content="X" 
                                    Command="{Binding ElementName=Cities, Path=DataContext.RemoveCityCommand}"/>
                        </Grid>
                        
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>--><!--</Grid>-->

        <TextBlock Grid.Row="0" Grid.Column="0" Text="Details"/>

        <DataGrid x:Name="RectangleSet"
                  ItemsSource="{Binding Collection}"
                  Grid.Row="1" Grid.Column="0" 
                  Grid.RowSpan="2"        
                  Margin="5,20,5,70"
                  MinColumnWidth="60"
                  AutoGenerateColumns="True">
        </DataGrid>
        <Button Grid.Row="2" Grid.Column="0"
                Margin="5,140,5,10"
                Command="{Binding CalculateCommand}"
                Content="Calculate Packing" Click="Calculate_Click"/>

        <Canvas x:Name="RectangleMapper"
              Grid.Row="0" Grid.Column="1"
              Grid.RowSpan="3"
              Background="LightGray"
              Margin="20">
            <Rectangle Canvas.Left="0" Canvas.Bottom="0"  
                       Width="200" Height="100" 
                       Fill="LightGreen"  Stroke="DarkGreen" StrokeThickness="1" />
            <Rectangle Canvas.Left="200" Canvas.Bottom="0"  
                       Width="200" Height="100" 
                       Fill="LightGreen"  Stroke="DarkGreen" StrokeThickness="1" ></Rectangle>

        </Canvas>      

